<div class="card card-primary">
    <div class="card-header">
      <h3 class="card-title">Chỉnh sửa danh mục</h3>
    </div>
    <!-- /.card-header -->
    <!-- form start -->
    <form method="post" enctype="multipart/form-data" action="/category/<%=category._id%>">
      <div class="card-body">
        <div class="form-group">
          <label for="exampleInputEmail1">Tên</label>
          <input type="text" class="form-control" id="exampleInputEmail1" name="name" placeholder="Nhập tên danh mục" value="<%= category.name  %> ">
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Tiêu đề</label>
          <input type="text" class="form-control" id="exampleInputPassword1" name="title" placeholder="Nhập tiêu đề" value="<%= category.title  %> ">
        </div>
        <div class="form-group">
       
            <label for="exampleInputFile">Chỉnh sửa ảnh danh mục</label>
            <div class="input-group">
              <div class="custom-file">
                <input type="file" class="custom-file-input" id="exampleInputFile" name="image">
                <label class="custom-file-label" for="exampleInputFile">Chọn ảnh</label>
              </div>
              <div class="input-group-append">
                <span class="input-group-text">Tải lên</span>
              </div>
            </div>
            <div class="input-group">
              <input type="hidden" name="iconcategory" value="<%=category.iconcategory%> ">
              <img src="<%=category.iconcategory %> " width="150px" style="margin:10px 0">
            </div>
          </div>
      <div class="card-footer">
        <button type="submit" class="btn btn-primary">Sửa</button>
      </div>
    </form>
  </div>