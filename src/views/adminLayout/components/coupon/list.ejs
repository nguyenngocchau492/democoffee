<div class="row">
  <div class="col-12">
    <div class="card card-primary">
      <div class="card-header">
        <h3 class="card-title">List Coupon</h3>
      </div>
      <!-- /.card-header -->
      <div class="card-body table-responsive p-0" style="height: 600px;">
        <table class="table table-head-fixed text-nowrap">
          <thead>
            <tr>
              <th>STT</th>
              <th>Tên</th>
              <th>Tiêu đề</th>
              <th>Ngày bắt đầu</th>
              <th>Ngày kết thúc</th>
              <th>Mã giảm giá</th>
              <th>Số tiền giảm</th>
              <th style="width:100px">&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% coupons.forEach((coupon,index)=>{ %>

              <tr>
                <td>
                  <%= index+1 %>
                </td>
                <td>
                  <%=coupon.name %>
                </td>
                <td>
                  <%=coupon.title %>
                </td>
                <td>
                  <%=coupon.date_from.toLocaleDateString() %>
                </td>
                <td>
                  <%=coupon.date_to.toLocaleDateString() %>
                </td>
                <td>
                  <%=coupon.code %>
                </td>
                <td> <%=coupon.number_decrement %>
                </td>

                <td>
                  <a class="btn btn-primary btn-sm" href="/coupon/<%=coupon._id  %> ">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a class="btn btn-danger coupon btn-sm" data-id="<%=coupon._id  %>" onclick="Delete('coupon')">
                    <input type="hidden" name="" class="couponid" value="<%=coupon._id%>">
                    <i class="fas fa-trash"></i>
                  </a>
                </td>
              </tr>

            

              <%}) %>
          </tbody>
        </table>
      </div>
      <!-- /.card-body -->
    </div>
    <!-- /.card -->
  </div>
</div>