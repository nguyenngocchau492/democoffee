
<div class="row">
    <div class="col-12">
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">Danh sách đơn hàng</h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body table-responsive p-0" style="height: 600px;">
          <table class="table table-head-fixed text-nowrap">
            <thead>
              <tr>
                <th>STT</th>
                <th>Tên</th>
                <th>SĐT</th>
                <th>Email</th>
                <th>Địa chỉ</th>
                <th>Thời gian </th>
                <th>Trạng thái</th>
                <th>Hoạt động</th>
                <th style="width:50px">&nbsp;</th>
              </tr>
            </thead>
            <tbody>
          
        <% orders.forEach((order,index)=>{ %> 
              <tr>
                <td><%=index+1%></td>
                <td> <%=order.id_user.name %> </td>
                <td> <%=order.id_user.phone %> </td>
          
                <td> <%=order.id_user.email %> </td>
                <td> <%=order.id_user.address %> </td>
                <td> <%=order.updatedAt.toLocaleDateString() %> </td>
                <td> <%=order.status=== 1? "Chờ xác nhận" : "Đã xác nhận" %> </td>

                <td>
                 <form action="/order/<%=order._id  %> " method="post">
                  <a class="btn btn-primary btn-sm">
                    <button type="submit" style="background-color: transparent; border: none;"><i class="fas fa-eye"></i></button>
                </a>                
                </form>
                </td>
                <td>
            <form action="/order/<%=order._id%>/acept" method="POST">
              <a class="btn btn-primary btn-sm" >
               <button type="submit" style="background-color: transparent; border: none;"><i class="fas fa-check"></i></button> 
            </a>
            </form>
                </td>
              </tr>
           <% })%> 
            </tbody>
          </table>
        </div>
        <!-- /.card-body -->
      </div>
      <!-- /.card -->
    </div>
  </div>