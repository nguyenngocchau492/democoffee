                  <th scope="row">Properties</th>
                  <td>Short Dress</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="tab-reve">
      <div class="row">
        <div class="col-lg-12">
          <div class="product-details-frame">
            <div class="fb-comments" data-href="http://e-medical.herokuapp.com/detail-specialty/<%=book._id  %> " data-width="100%"
            data-numposts="5"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
