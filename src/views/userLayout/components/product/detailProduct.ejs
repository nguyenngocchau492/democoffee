    </div>
    <div class="tab-pane fade show active" id="tab-desc">
      <div class="row">
        <div class="col-lg-12">
          <div class="product-details-frame">
            <div class="tab-descrip">
              <p>
                <%=book.description %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
