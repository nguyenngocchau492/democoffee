                </ul>
              </div>
              <div class="view-add-group">
                <button class="product-add" title="Add to Cart">
                  <i class="fas fa-shopping-basket"></i><span>Thêm vào giỏ hàng</span>
                </button>

              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<section class="single-banner inner-section" style="">
  <div class="container">
    <h2>Chi tiết sản phẩm</h2>
 
  </div>
</section>
<section class="inner-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-6">
        <div class="details-gallery">
          <div class="details-label-group">
          
          </div>
          <ul class="details-preview">
          <li>
            <img src="<%=book.img %> " alt="product"/>
          </li>
            <% book.img_invole.forEach(bok=>{ %>
              <li>
                <img src="<%=bok %> " alt="product" />
              </li>
              <% }) %>
          </ul>
          <ul class="details-thumb">
            <li>
              <img src="<%=book.img %> " alt="product"/>
            </li>
            <% book.img_invole.forEach(bok=>{ %>
              <li><img src="<%=bok %> " alt="product" /></li>
              <% }) %>


          </ul>
        </div>
      </div>



      <div class="col-lg-6">
      
        <div class="details-content">
          <h3 class="details-name">
            <a href="#">
              <%=book.name %>
            </a>
          </h3>
          <div class="details-meta">

            <p>Danh mục:<a href="#">
                <%=book.categorybook.name %>
              </a></p>
          </div>

          <h3 class="details-price">
            <span data-type="buy" class="price active">Giá:<small><%=book.price_buy.toLocaleString('it-IT', {
              style: 'currency',
              currency: 'VND'
          }); %></small> </span>
              <input type="hidden" name="type_order" class="type-order " >
          </h3>
          <p class="details-desc">
            <%=book.description%>
          </p>
          <input type="hidden" name="" class="id-book" value=<%=book._id%>>
        
          <div class="details-add-group">

            <div class="product-action"><button class="action-minus" title="Quantity Minus"><i
                  class="icofont-minus"></i></button><input class="action-input" title="Quantity Number" type="text"
                name="quantity" value="1"><button class="action-plus" title="Quantity Plus"><i
                  class="icofont-plus"></i></button></div>

            <button class="product-add add-cart" title="Add to Cart">
              <i class="fas fa-shopping-basket"></i><span>Thêm vào giỏ hàng</span>
            </button>

          </div>
        </div>

      </div>
    </div>
  </div>
  </div>
</section>
<section class="inner-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <ul class="nav nav-tabs">
          <li>
            <a href="#tab-desc" class="tab-link active" data-bs-toggle="tab">Mô tả</a>
          </li>
          <li>
            <a href="#tab-reve" class="tab-link" data-bs-toggle="tab">Đánh giá</a>
          </li>
        </ul>
