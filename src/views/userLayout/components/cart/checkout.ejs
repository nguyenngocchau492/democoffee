<section class="inner-section single-banner" style="background: url(/images/web-banner.jpg) no-repeat center">
  <div class="container">
    <h2>Đơn hàng </h2>
  </div>
</section>
<section class="inner-section checkout-part">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <div class="account-card">
          <div class="account-title">
            <h4>Giỏ hàng của bạn</h4>
          </div>
          <div class="account-content">
            <div class="table-scroll">
              <table class="table-list">
                
                <% if(orders.length===0 ){ %>

                  <tr>
                    <div class="notFoundBook">
                      <img src="/images/NotFound.svg" alt="">
                      <p class="notFound"> Giỏ hàng của bạn đang rỗng :(
                      </p>
                    </div>

                  </tr>
                  <%}else{ %>
                <thead>
                  <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Tên sản phẩm</th>

                    <th scope="col">Thể loại</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Tổng số tiền</th>
                    <th scope="col">hành động</th>
                 


                    
                  </tr>
                </thead>
                <tbody>


                      <%orders.forEach((order,index)=>{ %>



                        <tr>
                          <td class="table-serial">
                            <h6>
                              <%=index+1 %>
                            </h6>
                          </td>
                          <td class="table-image">
                            <img src="<%=order.id_book.img%> " alt="product" />
                          </td>
                          <td class="table-name">
                            <h6>
                              <%=order.id_book.name %>
                            </h6>
                          </td>

                          <td class="table-brand">
                            <h6>
                              <%=order.id_book.categorybook.name %>
                            </h6>
                          </td>
                          <td class="table-quantity">
                            <h6>
                              <%=order.quantity %>
                            </h6>
                          </td>
                          <td class="table-price">
                            <h6>
                              <%=order.total%> <span class="vnd">VND</span>
                            </h6>
                          </td>
                          <td class="table-action">

                            <a class="trash" title="Remove Wishlist" data-id="<%=order._id  %> "><i
                                class="icofont-trash"></i></a>
                          </td>
                        </tr>


                        <%}) %>
                      

                </tbody>
              </table>
            </div>
            <div class="chekout-coupon">
              <button class="coupon-btn">Bạn có mã giảm giá?</button>
              <form class="coupon-form" method="POST" action="/order/add-coupon">
                <input name="idCoupon" type="text" placeholder="Enter your coupon code" /><button
                  type="submit"><span>apply</span></button>
              </form>
            </div>
            <div class="checkout-charge">
              <ul>
                <li><span>Tổng tiền:</span><span class="total-cart">
                    <%= total%><span class="vnd">VND</span>
                  </span></li>
                <li><span>Số tiền đã giảm:</span><span class="total-cart">
                    <%=coupon %><span class="vnd">VND</span>
                  </span></li>
                <li>
                  <span>Tổng tiền:</span><span class="total-cart">
                    <%=subTotal %><span class="vnd">VND</span>
                  </span>
                </li>
              </ul>
            </div>
            
          </div>
        </div>
      </div>
    
      <div class="col-lg-12">
        <div class="account-card">
          <div class="account-title">
            <h4>Số điện thoại</h4>
       
          </div>
