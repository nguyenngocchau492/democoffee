<section class="inner-section single-banner" style="background: url(/images/web-banner.jpeg) no-repeat center">
  <div class="container">
    <h2>Đơn đang chờ xác nhận </h2>
  </div>
</section>
<section class="inner-section checkout-part">
  <div class="container">
    <div class="row">

      <div class="col-lg-12">
        <div class="account-card">
          <div class="account-title">
            <h4>Đơn hàng chờ xác nhận</h4>
          </div>
          <div class="account-content">
            <div class="table-scroll">
              <table class="table-list">
                
                <% if(orders.length===0 ){ %>

                  <tr>
                    <div class="notFoundBook">
                      <img src="/images/NotFound.svg" alt="">
                      <p class="notFound"> Đơn hàng của bạn đang rỗng :(
                      </p>
                    </div>

                  </tr>
                  <%}else{ %>
                <thead>
                  <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Hình ảnh</th>
                    <th scope="col">Tên sản phẩm</th>

                    <th scope="col">Danh mục</th>
                    <th scope="col">Số lượng</th>
                    <th scope="col">Tổng số tiền</th>
        
                  </tr>
                </thead>
                <tbody>


                      <%orders.forEach((order,index)=>{ %>
                        <tr>
                          <td class="table-serial">
                            <h6>
                              <%=index+1 %>
                            </h6>
                          </td>
                          <td class="table-image">
                            <img src="<%=order.o.id_book.img%> " alt="product" />
                          </td>
                          <td class="table-name">
                            <h6>
                              <%=order.o.id_book.name %>
                            </h6>
                          </td>

                          <td class="table-brand">
                            <h6>
                              <%=order.o.id_book.categorybook.name %>
                            </h6>
                          </td>
                          <td class="table-quantity">
                            <h6>
                              <%=order.o.quantity %>
                            </h6>
                          </td>
                          <td class="table-price">
                            <h6>
                              <%=order.o.total%> <span class="vnd">VND</span>
                            </h6>
                          </td>
                        </tr>


                        <%}) %>
                      

                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    
      
</section>

<% } %>